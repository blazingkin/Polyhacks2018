<%= form_for @parent, url: {action: 'update'}, method: :post do |f| %>
    <%= f.hidden_field :latitude, id: 'latitude' %>
    <%= f.hidden_field :longitude, id: 'longitude' %>
    <b style="font-size: 50px;"><%= @parent.name%></b>
    <br />
    <br />
    <%= f.label :email, style: 'font-size: 50px;' %>
    <br />
    <%= f.email_field :email, class: 'form-control', style: 'font-size: 50px;' %>
    <br />
    <br />
    <%= f.label :phone_number, style: 'font-size: 50px;' %>
    <br />
    <%= f.telephone_field :phone_number, class: 'form-control', style: 'font-size: 50px' %>
    <br />
    <br />
    <%= f.label :bio, style: 'font-size: 50px;' %>
    <br />
    <%= f.text_area :bio, class: 'form-control', style: 'font-size: 50px;' %>
    <br />
    <br />
    <%= f.submit 'Save', class: 'btn btn-primary form-control btn-lg', style: 'font-size: 50px;' %>
<% end %>

<script>
$(document).ready(function(){
    navigator.geolocation.getCurrentPosition(fill_position);
})
function fill_position(position){
    $('#latitude').val(position.coords.latitude);
    $('#longitude').val(position.coords.longitude)
}
</script>