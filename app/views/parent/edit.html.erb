<%= form_for @parent, url: {action: 'update'}, method: :post do |f| %>
    <%= f.hidden_field :latitude, id: 'latitude' %>
    <%= f.hidden_field :longitude, id: 'longitude' %>
    <b><%= @parent.name%></b>
    <br />
    <br />
    <%= f.label :email %>
    <br />
    <%= f.email_field :email, class: 'form-control' %>
    <br />
    <br />
    <%= f.label :phone_number %>
    <br />
    <%= f.telephone_field :phone_number, class: 'form-control' %>
    <br />
    <br />
    <%= f.label :bio %>
    <br />
    <%= f.text_area :bio, class: 'form-control' %>
    <br />
    <br />
    <%= f.submit 'Save', class: 'btn btn-primary form-control btn-lg' %>
<% end %>

<script>
$(document).ready(function(){
    navigator.geolocation.getCurrentPosition(fill_position);
})
function fill_position(position){
    $('#latitude').val(position.coords.latitude);
    $('#longitude').val(position.coords.longitude)
}
</script>