<div class="bg-white">
    <br />
    <div class="row bg-white">
        <div class="col-2"></div>
        <div class="col-8" style="background-color: #267ABF; padding-bottom: 5px;">
            <%= form_tag '/', method: :get %>
            <strong class="text-white">SEARCH</strong>
            <div class="row">
                <div class="col-md-4">
                    <label class="text-white"># of kids</label>
                    <br />
                    <%= text_field_tag :number_of_kids, '' %>
                </div>
                <div class="col-md-4">
                    <label class="text-white">Distance</label>
                    <br />
                    <%= text_field_tag :distance, ''%>
                </div>
                <div class="col-md-4">
                    <label class="text-white">Date</label>
                    <br />
                    <%= datetime_field_tag :date %>
                </div>
            </div>
            <br />
            <%= submit_tag 'Search', class: 'btn form-control' %>
        </div>
    </div>
    <br />
    <br />
    <div class="row bg-white">
        <div class="col-2"></div>
        <div class="col-8">
            <h2>POSTS</h2>
            <% @jobs.each do |job| %>
                <a href="/parent/<%= job.parent.uid %>%">
                    <div class="row" style="background-color: #C5E6FC; padding-top: 5px; padding-bottom: 5px;">
                        <div class="col-4">
                        </div>
                        <div class="col-8 text-dark">
                            <strong class="text-black"><%= job.parent.name.upcase %>, <%= job.child_number.to_s + " child".pluralize(job.child_number) %></strong>
                            <br />
                            From <%= format_time(job.start_time) %>
                            <br />
                            To <%= format_time(job.end_time) %>
                        </div>
                    </div>
                </a>
                <Br />
            <% end %>
        </div>
    </div>
</div>