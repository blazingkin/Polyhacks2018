<div class="bg-white">
    <br />
    <div class="row bg-white">
        <div class="col-2"></div>
        <div class="col-8" style="background-color: #267ABF;">
            <strong class="text-white">SEARCH</strong>
            <div class="row">
                <div class="col-md-4">
                    <%= text_field_tag :number_of_kids, '', placeholder: '# of kids' %>
                </div>
                <div class="col-md-4">
                    <%= text_field_tag :distance, '', placeholder: 'distance' %>
                </div>
                <div class="col-md-4">
                    <%= datetime_field_tag :date %>
                </div>
            </div>
            <%= submit_tag 'Search', class: 'btn form-control' %>
        </div>
    </div>
    <br />
    <br />
    <div class="row bg-white">
        <div class="col-2"></div>
        <div class="col-8">
            <h2>POSTS</h2>
            <% @jobs.each do |job| %>
                <div class="row" style="background-color: #C5E6FC;">
                    <div class="col-4">
                    </div>
                    <div class="col-8">
                        <strong><%= job.parent.name.upcase %>, <%= "child".pluralize(job.child_number) %></strong>
                    </div>
                </div>
                <Br />
            <% end %>
        </div>
    </div>
</div>
<% @jobs.each do |job| %>
    <%= job.parent.name %> is looking for Childcare
    <br />
    <%= link_to 'here', '/job/'+job.id.to_s %>
    <br />
    <br />
<% end %>

<%= will_paginate @jobs %>